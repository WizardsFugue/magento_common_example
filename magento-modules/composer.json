{
    "require": {
        "fbrnc/aoe_templatehints": "*",
        "fbrnc/aoe_profiler": "*",
        "magento-hackathon/magento-composer-installer": "*@dev",
        "firegento/psr0autoloader": "dev-master",
        "firegento/magesetup": "*"
    },
    "require-dev": {
        "magento-hackathon/composer-command-integrator": "*",
        "phpunit/phpunit": "4.*",
        "phpunit/dbunit":"*",
        "phpunit/php-invoker": "*",
        "WizardsFugue/magento1_tests": "dev-master",
        "composer/composer": "dev-master"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/WizardsFugue/magento1_tests"
        },
        {
            "type": "composer",
            "url": "http://packages.firegento.com"
        }
    ],
    "autoload":{
        "classmap": [
            "../public/app/code",
            "../public/lib"
        ]
    },
    "extra":{
        "magento-deploystrategy": "symlink",
        "auto-append-gitignore": true,
        "magento-root-dir": "../public/"
    }
}